@page
@model DevCapacityWebApp.Pages.Tasks.EditModel
@await Html.PartialAsync("_Tabs")

<h3>Edit Task</h3>

<form method="post" class="mb-3">
  <input type="hidden" asp-for="Task.TaskId" />
  <div class="mb-2">
    <input class="form-control" asp-for="Task.Name" placeholder="Name" />
  </div>

  <div class="row g-2 mb-2">
    <div class="col-md-3">
      <label class="form-label">Initiative</label>
      <select class="form-select" asp-for="Task.Initiative" name="Task.Initiative">
        <option value="">-- Select Initiative --</option>
        @if (Model.Initiatives != null)
        {
          @foreach(var i in Model.Initiatives)
          {
            if (i.InitiativeId == Model.Task.Initiative)
            {
              <option value="@i.InitiativeId" selected="selected">@i.Name</option>
            }
            else
            {
              <option value="@i.InitiativeId">@i.Name</option>
            }
          }
        }
      </select>
    </div>

    <div class="col-md-3">
      <label class="form-label">Status</label>
      <select class="form-select" asp-for="Task.Status" name="Task.Status">
        <option value="">-- Select Status --</option>
        @if (Model.Statuses != null)
        {
          @foreach(var s in Model.Statuses)
          {
            if (s.StatusId == Model.Task.Status)
            {
              <option value="@s.StatusId" selected="selected">@s.Name</option>
            }
            else
            {
              <option value="@s.StatusId">@s.Name</option>
            }
          }
        }
      </select>
    </div>

    <div class="col-md-2">
      <label class="form-label">PDs</label>
      <input class="form-control" type="number" asp-for="Task.PDs" />
    </div>

    <div class="col-md-2">
      <label class="form-label">Start Date</label>
      <input class="form-control" type="date" name="Task.StartDate"
             value="@(Model.Task.StartDate != default(System.DateTime) ? Model.Task.StartDate.ToString("yyyy-MM-dd") : "")" />
    </div>

    <div class="col-md-2">
      <label class="form-label">End Date</label>
      <input class="form-control" type="date" name="Task.EndDate"
             value="@(Model.Task.EndDate != default(System.DateTime) ? Model.Task.EndDate.ToString("yyyy-MM-dd") : "")" />
    </div>
  </div>

  <div class="d-flex gap-2 mt-2">
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" href="/Tasks">Cancel</a>
  </div>
</form>

<hr />

<h4>Engineer Assignments</h4>

<form method="post" asp-page-handler="AddAssignment" class="row g-2 mb-3">
  <!-- ensure TaskId and EngineerId are sent with exact names used by model binding -->
  <input type="hidden" name="NewAssignment.TaskId" value="@Model.Task.TaskId" />

  <div class="col-md-6">
    <select class="form-select" asp-for="NewAssignment.EngineerId" name="NewAssignment.EngineerId" required>
      <option value="">-- Select Engineer --</option>
      @if (Model.Engineers != null)
      {
        @foreach(var e in Model.Engineers)
        {
          <option value="@e.Id">@e.Name</option>
        }
      }
    </select>
  </div>

  <div class="col-md-1 d-flex align-items-start">
    <button class="btn btn-primary" type="submit">Add</button>
  </div>
</form>

<div class="table-responsive">
  <table class="table table-sm">
    <thead><tr><th>Id</th><th>Engineer</th><th>Capacity</th><th>Start</th><th>End</th><th></th></tr></thead>
    <tbody>
      @if (Model.Assignments != null)
      {
        @foreach(var a in Model.Assignments)
        {
          <tr>
            <td>@a.AssignmentId</td>
            <td>@Model.Engineers.FirstOrDefault(x => x.Id == a.EngineerId)?.Name</td>
            <td>@a.CapacityShare</td>
            <td>@(a.StartDate != default(System.DateTime) ? a.StartDate.ToString("yyyy-MM-dd") : "")</td>
            <td>@(a.EndDate != default(System.DateTime) ? a.EndDate.ToString("yyyy-MM-dd") : "")</td>
            <td>
              <form method="post" asp-page-handler="DeleteAssignment" class="d-inline">
                <input type="hidden" name="id" value="@a.AssignmentId" />
                <button class="btn btn-sm btn-danger" type="submit">Remove</button>
              </form>
            </td>
          </tr>
        }
      }
    </tbody>
  </table>
</div>