<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@ViewData["Title"] - DevCapacityWebApp</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="" crossorigin="anonymous" />

  <!-- site css -->
  <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">

  <div class="container-fluid">
    <div class="row">
      <nav class="col-12 d-md-none bg-white border-bottom py-2">
        <div class="d-flex align-items-center justify-content-between">
          <div class="ms-2 h5 mb-0">DevCapacity</div>
          <button class="btn btn-outline-secondary btn-sm me-2" id="sidebarToggle">Menu</button>
        </div>
      </nav>

      <aside id="sidebarColumn" class="col-12 col-md-3 col-lg-2 bg-white border-end sidebar-collapse">
        @await Html.PartialAsync("_Sidebar")
      </aside>

      <main class="col-12 col-md-9 col-lg-10 py-3">
        <div class="px-2">
          @RenderBody()
        </div>
      </main>
    </div>
  </div>

  <footer class="text-muted small mt-4 mb-3 text-center">
    <div class="container">© @DateTime.Now.Year — DevCapacity</div>
  </footer>

  <!-- Bootstrap bundle (includes Popper) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="" crossorigin="anonymous"></script>

  <script>
    // simple toggle for sidebar on small viewports
    (function () {
      const toggle = document.getElementById('sidebarToggle');
      const sidebar = document.getElementById('sidebarColumn');
      if (!toggle || !sidebar) return;
      toggle.addEventListener('click', function () {
        sidebar.classList.toggle('open-sm');
      });
      // close sidebar when clicking outside on small screens
      document.addEventListener('click', function (e) {
        if (window.innerWidth >= 768) return;
        if (!sidebar.contains(e.target) && e.target !== toggle) {
          sidebar.classList.remove('open-sm');
        }
      });
    })();
  </script>

  @RenderSection("Scripts", required: false)
</body>
</html>
